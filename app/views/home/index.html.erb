<% content_for :login_path do %><%= home_login_path %><% end %>
<% content_for :page_nav do %><%= link_to "Auctions", auctions_path, style: "color:#A6A6A6;margin-left:10px;" %><% end %>
<% content_for :logged_in_page_nav do %><%= link_to "My Account", myaccount_path, style: "color:#A6A6A6;margin-left:10px;" %><% end %>

<div id="home_container">
  <div id="home_auction">
    <h2>
      <%= @current_item.name %>
    </h2>
    <%= image_tag @current_item.headline_image.url, style: 'height:40vh;width:40vh;float:left;margin-right:20px;' %>
    <h2>This auction ends on: <%= @current_auction.end_date.strftime("%b %-d, %Y")%></h2>
    <h3>
      Description
    </h3>
    <p>
      <%= @current_item.description %>
    </p>
    <p>
      Starting Price: <%= number_to_currency @current_item.starting_price %><br />
      Current Bid: <%= number_to_currency @current_auction.current_bid %>
    </p>
    <%= form_tag bid_on_auction_path(@current_auction.id), name: "bid_form", remote: true do %>
      <div class="btn btn-default" style="float:left;" onclick="window.bid_form.submit()">Bid!</div>
      <div class="_1-12 form-group" style="float:left;">
        <%= text_field_tag :bid, "$0.00", id: "bid_field" , class: "form-control" %>
      </div>
    <% end %>
    <%= link_to flag_auction_path(@current_auction.id), id: "flag_icon", remote: true, method: :post do%>
      <%= image_tag 'flag_red.png' %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $("#bid_field").maskMoney({thousands:'', decimal:'.', allowZero:true, prefix: '$'});
</script>